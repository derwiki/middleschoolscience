.container.lesson
  .row
    .col-xs-12.text-center
      %h1.text-center Weather and Atmosphere

    .col-sm-10.col-sm-offset-1
      %ul#section-picker
        - @sections.each do |section|
          %li= link_to section.titleize, "##{ section }"

    .col-sm-10.col-sm-offset-1
      - @sections.zip(['selected']).each do |section, selected|
        %a{ name: section }
        = render "lessons/weather_atmosphere/#{ section }"
      #disqus_thread
